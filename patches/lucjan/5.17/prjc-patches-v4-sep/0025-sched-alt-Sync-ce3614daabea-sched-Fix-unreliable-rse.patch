 	}
 	raw_spin_unlock(&rq->lock);
 
+	rseq_migrate(p);
 	/*
 	 * We're setting the CPU for the first time, we don't migrate,
 	 * so use __set_task_cpu().
@@ -2341,6 +2342,7 @@ void wake_up_new_task(struct task_struct *p)
 
 	rq = cpu_rq(select_task_rq(p));
 #ifdef CONFIG_SMP
